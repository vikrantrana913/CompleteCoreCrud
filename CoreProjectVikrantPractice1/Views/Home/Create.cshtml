@model CoreProjectVikrantPractice1.Models.CandidateDBModel
@using CoreProjectVikrantPractice1.Models

@{
    ViewData["Title"] = "Create Candidate";

}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Create Candidate</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <div class="row g-3">
                    <!-- Name -->
                    <div class="col-md-4">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <!-- Gender -->
                    <div class="col-md-4">
                        <label class="form-label">Gender</label>
                        <div class="form-check">
                            <input type="radio" asp-for="Gender" value="Male" class="form-check-input" id="genderMale" />
                            <label class="form-check-label" for="genderMale">Male</label>
                        </div>
                        <div class="form-check">
                            <input type="radio" asp-for="Gender" value="Female" class="form-check-input" id="genderFemale" />
                            <label class="form-check-label" for="genderFemale">Female</label>
                        </div>
                    </div>

                    <!-- Designation -->
                    <div class="col-md-4">
                        <label class="form-label">Designation</label>
                        <select asp-for="Designation" asp-items="ViewBag.Desingnation" class="form-select" id="Desingnation">
                            <option value="">Select Designation</option>
                        </select>
                        <span asp-validation-for="Designation" class="text-danger"></span>
                    </div>
                </div>

                <div class="row g-3 mt-2">
                    <!-- Country -->
                    <div class="col-md-4">
                        <label class="form-label">Country</label>
                        <select asp-for="Country" asp-items="ViewBag.Country" class="form-select" id="country">
                            <option value="">Select Country</option>
                        </select>
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>

                    <!-- State -->
                    <div class="col-md-4">
                        <label class="form-label">State</label>
                        <select asp-for="State" asp-items="Enumerable.Empty<SelectListItem>()" class="form-select" id="state">
                            <option value="">Select State</option>
                        </select>
                        
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>

                    <!-- City -->
                    <div class="col-md-4">
                        <label class="form-label">City</label>
                        <select asp-for="City" asp-items="Enumerable.Empty<SelectListItem>()" class="form-select" id="city">
                            <option value="">Select City</option>
                        </select>
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>

                <!-- Skills -->
                <div class="row g-3 mt-2">
                    <div class="col-md-6">
                        <label class="form-label">Skills</label>
                        <div class="form-check">
                            <input type="checkbox" asp-for="Python" class="form-check-input" id="skillPython" />
                            <label class="form-check-label" for="skillPython">Python</label>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" asp-for="Java" class="form-check-input" id="skillJava" />
                            <label class="form-check-label" for="skillJava">Java</label>
                        </div>
                    </div>

                    <!-- Photo -->
                    <div class="col-md-6">
                        <label class="form-label">Upload Photo</label>
                        <input type="file" asp-for="Photo" class="form-control" />
                    </div>
                </div>

                <!-- Submit -->
                <div class="mt-4">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-check-circle"></i> Submit
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
@* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- AJAX Script -->
<script>
    $(document).ready(function () {
        $('#country').change(function () {
            var countryid = $(this).val();
            $('#state').empty().append('<option value="">Select State</option>');
            $('#city').empty().append('<option value="">Select City</option>');

            if (countryid) {
                $.ajax({
                    url: '/Home/GetStateName',
                    type: 'POST',
                    data: { countryid:countryid },
                    success: function (states) {
                        console.log(states);
                        $.each(states, function (i, state) {
                            $('#state').append('<option value="' +state.StateId+ '">'+state.StateName+'</option>');
                        });
                    },
                    error: function () {
                        alert('⚠️ Unable to fetch states. Please try again.');
                    }
                });
            }
        });

        $('#state').change(function () {
            var stateid = $(this).val();
            $('#city').empty().append('<option value="">Select City</option>');

            if (stateid) {
                $.ajax({
                    url: '@Url.Action("GetCityName", "Home")',
                    type: 'POST',
                    data:{ stateid:stateid },
                    success: function (cities) {
                        $.each(cities, function (i, city) {
                            $('#city').append('<option value="' + city.CityId + '">' + city.CityName + '</option>');
                        });
                    },
                    error: function () {
                        alert('⚠️ Unable to fetch cities. Please try again.');
                    }
                });
            }
        });
    });

</script>

@section Scripts {
    <!-- Bootstrap validation scripts -->
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        

    }
}
